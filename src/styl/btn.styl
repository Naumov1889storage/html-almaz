.btn {
  display: flex;
  justify-content center
  align-items center
  cursor: pointer;
  border-radius: 5px;
  max-width 100%

  &_1 {
    height: 81px;
    box-shadow: 0 4px 0 #002b8f;
    background-image: linear-gradient(63deg, #0c3690 0%, #103a9b 100%);

    color: #ffffff;
    font-size: 15px;
    font-weight: 700;
    text-transform: uppercase;

    letter-spacing: 0.71px;

    &:hover {
      box-shadow: none
    }
  }

  &_2 {
    height: 58px;
    border: 1px solid #1a4482;

    color: #194381;
    font-size: 15px;
    font-weight: 500;
    text-transform: uppercase;

    letter-spacing: 0.68px;

    &:hover {
      box-shadow: 0 4px 0 #002b8f;
      background-image: linear-gradient(63deg, #0c3690 0%, #103a9b 100%);
      color: #ffffff;
    }
  }
}