.index-page-slider-section {
  background-color: #f8f8f8;
}

.index-page-slider {
  position: relative;
  min-height: 350px;

  &__control {
    position: absolute;
    z-index 3
    bottom: 2rem
    display: flex;
    align-items center
    width: max-content
    height: 35px
  }

  &__arrows {

    button {
      position: absolute;
      top: 0
      width: 35px;
      height: 35px;
      background-color: #eeeeee;
      border-radius 50%

      &:hover {
        background-color: darken(#eeeeee, 5%);
      }

      .icon_arrow {
        transform translate(-1px, 1px)
      }
    }

    button[data-controls="prev"] {
      left: 0
    }

    button[data-controls="next"] {
      right: 0

      .icon_arrow {
        transform rotate(180deg) translate(-1px, -1px)
      }
    }
  }

  &__dots {
    margin: 0 53px

    button {
      margin: 6px
      width: 11px;
      height: 11px;
      background-color: #eeeeee;
      border-radius 50%

      &.tns-nav-active,
      &.tns-nav-active:hover {
        background-color: #032e79
      }

      &:hover {
        background-color: darken(#eeeeee, 10%);
      }
    }
  }

  &__item {
    position: relative;
    z-index 1
    min-height: 350px;
  }

}

.index-page-slider {
  &__item {
    .btn_1 {
      margin: 2rem 0 0 0
      width: 214px
      height: 56px
    }
  }

  &__title {
    font-size: 40px
    color: #323232;
    font-weight: 700
    line-height: 50px
  }

  &__text {
    margin: 10px 0 0 0
    font-size: 17px;
    color: #5d5d5d;
    line-height: 23px;
  }

  &__item {
    overflow hidden

    .container {
      position: relative;
      height: 100%
    }
  }

  &__item-content {
    display: flex;
    flex-direction column
    justify-content center
    height: 100%
    max-width: 530px;
    min-height: 350px;
    padding: 20px 0 74px 0;
  }

  &__bg {
    position: absolute;
    top: 0
    left: 590px
    height: 100%
    object-fit cover
    object-position left
  }
}

@media (max-width: 1100px) {
  .index-page-slider {

    &__item {
      &:before {
        content: "";
        position: absolute;
        z-index: 2;
        width: 100%;
        max-width: 985px;
        height: 100%;
        top: 0;
        left: 0;
        background-image: -webkit-gradient(linear, left top, right top, from(hsla(0, 0%, 100%, .9)), color-stop(62%, hsla(0, 0%, 100%, .7)), to(hsla(0, 0%, 100%, 0)));
        background-image: -webkit-linear-gradient(left, hsla(0, 0%, 100%, .9), hsla(0, 0%, 100%, .7) 62%, hsla(0, 0%, 100%, 0));
        background-image: -o-linear-gradient(left, hsla(0, 0%, 100%, .9) 0, hsla(0, 0%, 100%, .7) 62%, hsla(0, 0%, 100%, 0) 100%);
        background-image: linear-gradient(90deg, hsla(0, 0%, 100%, .9) 0, hsla(0, 0%, 100%, .7) 62%, hsla(0, 0%, 100%, 0));
      }
    }

    &__item-content {
      position: relative;
      z-index 3
    }

    &__container {
      position: static
    }

    &__bg {
      z-index 1
      width: 100%
      left: 50%
      transform translateX(-50%)
    }
  }
}

@media (max-width: 600px) {
  .index-page-slider {

    &__item {
      &:before {
        display: none
        //background-image: none
        //background-color: rgba(255, 255, 255, 0.7)
      }

      .btn_1 {
        margin 1rem 0 0 0
      }
    }

    &__bg {
      display: none
    }

    &__title {
      font-size: 33px
      font-weight: 700
      line-height: 40px
    }

    &__text {
      margin: 10px 0 0 0
      font-size: 16px;
      line-height: 23px;
    }

    &__control {
      bottom: 1rem;
      left: 50%
      transform translateX(-50%)
    }
  }
}