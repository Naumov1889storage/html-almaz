.product-form {
  display: flex;
  flex-wrap wrap
  margin-bottom 3rem

  .input-container {
    margin 0 2.6% 1.5rem 0
    max-width: 23%
    width: 100%
    height: 58px
  }

  .btn {
    max-width: 23%
    width: 100%
    height: 55px
  }
}

.product-header {
  display: flex;
  align-items center
  background-color: #f8f8f8;
  height: 350px

  &__title {
    margin-bottom 10px
    color: #323232;
    font-size: 40px;
    font-weight: 700;
  }

  &__subtitle {
    color: #5d5d5d;
    font-size: 17px;
    font-weight: 400;
    line-height: 23px;
  }

  &__container {
    position: relative;
    height: 100%;
    display: flex;
    align-items center
  }

  &__text {
    max-width: 500px
  }

  &__bg {
    position: absolute;
    top: 0
    left: 560px
    height: 100%
    object-fit cover
    object-position left
  }
}

.product-page {
  .gallery {
    margin: -15px
  }
}

