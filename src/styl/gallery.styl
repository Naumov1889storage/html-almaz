.gallery {
  display: flex;
  flex-wrap wrap
  justify-content center

  .box {
    margin: 0 11px 26px 11px;
    min-width: 204px;
    height: 102px

    &__content {
      display: flex;
      justify-content center
      align-items center
      width: 100%
      height: 100%
      background-color: #ffffff
    }

    &:after {
      left: 4px
      right: 4px
      bottom: -4px
    }
  }

  & > img {
    margin: 15px
  }
}

@media (max-width: 400px) {
  .gallery {
    & > img {
      margin: 10px
      width: 38%
    }
  }
}