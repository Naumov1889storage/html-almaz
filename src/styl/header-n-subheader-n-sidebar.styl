.header {
  background-color: #ffffff
  border-bottom 1px solid #f3f3f3

  &__container {
    display: flex;
    justify-content space-between
    align-items center
    padding: 21px 0
  }

  &__contact-list {
    display: flex;

    .contact {
      margin-right: 2rem

      &:last-child {
        margin 0
      }
    }
  }

  &__callback-btn {
    width: 203px;
    height: 50px;
  }
}

@media (max-width: 1250px) {
  .header {
    &__contact-list {
      flex-direction column

      .contact {
        margin: 0 0 0.7rem 0
      }
    }
  }
}


@media (max-width: 1000px) {
  .header {

    &__logo {
      .logo__img {
        margin-right 14px
        width: 70px
      }

      .logo__text {
        font-size: 24px
      }
    }

    &__callback-btn {
      width: 190px
      height: 52px
      font-size: 14px
    }
  }
}

@media (max-width: 550px) {
  .header {
    &__logo {
      flex-direction column

      .logo__img {
        margin: 0 0 4px 0
        width: 76px
      }

      .logo__text {
        font-size: 18px
      }
    }
  }
}

@media (max-width: 400px) {
  .header {
    &__container {
      padding: 14px 0
    }

    &__logo {
      .logo__img {
        margin: 0 0 4px 0;
        width: 62px;
      }

      .logo__text {
        font-size: 16px
      }
    }

    &__contact-list {
      .contact {
        font-size: 15px
      }

      .contact__icon {
        margin: 6px 0 0 0;
        transform: scale(0.7);
      }
    }
  }
}

.subheader {
  height: 54px
  background-color: #ffffff
  box-shadow: 0 4px 16px rgba(45, 45, 45, 0.04);
}

.nav {
  display: flex;
  justify-content space-around
  height: 100%

  &__item {
    position: relative;
    display: flex;
    justify-content center
    align-items center

    color: #545454;
    font-size: 16px;
    font-weight: 400;
    letter-spacing: 0.4px;

    &:hover {
      color: #032e79;

      &:before {
        content ''
        position: absolute;
        bottom 0
        left 0
        width: 100%
        height: 2px
        background-color: #032e79;
      }
    }
  }
}


.burger {
  display: none
}

@media (max-width: 760px) {
  .burger {
    display: block;
  }

  .header {

    &__callback-btn {
      display: none
    }
  }

  .subheader {
    display: none
  }
}
