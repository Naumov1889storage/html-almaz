.title {
  font-weight: 800;
  color: #434343;
  margin: 0 auto
  text-align: center

  &_h1 {
    margin-bottom: 2rem
    font-size: 34px;
    letter-spacing: 0.52px;
  }

  &_h2 {
    margin-bottom: 2rem
    font-size: 33px;
    letter-spacing: 0.46px;
  }

  &_h3 {
    font-size: 26px
    font-weight: 500
    text-transform none
  }

  &_30 {
    margin-bottom: 1.5rem
    font-size: 30px
    line-height: 40px;
  }
  
  &_left {
    text-align: left
  }
  
  &__divider {
    display: block
    margin: 10px auto 0 auto
    width: 106px
    height: 6px
    border-radius: 3px;
    background-image: linear-gradient(63deg, #0c3690 0%, #103a9b 100%);

    &_left {
      margin: 10px 0 0 0
    }
  }
}

.text {
  &_center {
    text-align: center
  }

  &_color {
    &_primary {
      color: #103a9b;
    }
  }
  
  &_left {
    text-align: left
  }
  
  &_underline {
    text-decoration: underline
    
    &:hover {
      text-decoration: none
    }
  }
}

.text-section {
  color: #4f4f4f;
  font-size: 19px;
  font-weight: 400;
  line-height: 29px;
}

@media (max-width: 600px) {
  .title {
    &_h1 {
      font-size: 29px;
    }

    &_h2 {
      font-size: 26px;
    }

    &_h3 {
      font-size: 23px
    }

    &_30 {
      font-size: 25px
      line-height: 35px
    }
  }
}

@media (max-width: 400px) {
  .title {

    &_h1 {
      font-size: 24px
    }

    &_h3 {
      font-size: 22px;
    }
  }
}